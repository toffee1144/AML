<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    tools:context=".homepage.HomepageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:orientation="vertical"
        android:background="@drawable/vector__8_"
        android:layout_marginTop="-5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp">

            <!-- Left text column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginVertical="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome Back"
                    android:textSize="19sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/white"
                    android:paddingStart="8dp" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guest"
                    android:textSize="25sp"
                    android:fontFamily="@font/montserrat_extrabold"
                    android:textColor="@color/white"
                    android:paddingStart="8dp"
                    android:layout_marginTop="-6dp" />
            </LinearLayout>

            <!-- Profile Image -->
            <ImageView
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_round"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_guest" />

        </LinearLayout>

        <ImageView
            android:layout_width="220dp"
            android:layout_height="250dp"
            android:background="@drawable/group__1_"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-16dp"
            android:layout_marginEnd="67dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Sinusitis Detector"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#25BEBE" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your smart companion for early\ndetection of Sinusitis"
                android:textAlignment="center"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/black" />


        </LinearLayout>

        <!-- Report Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_yellow_card"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_marginHorizontal="12dp"
            android:backgroundTint="#FFFF00">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Analysis"
                android:fontFamily="@font/montserrat_bolditalic"
                android:textColor="#25BEBE"
                android:textSize="18sp"
                android:layout_gravity="start" />

            <TextView
                android:id="@+id/tvPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:fontFamily="@font/montserrat_black"
                android:textSize="48sp"
                android:textColor="@color/text_grey"
                android:layout_marginBottom="-16dp"/>

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEDIUM LEVEL"
                android:fontFamily="@font/montserrat_black"
                android:textSize="18sp"
                android:textColor="@color/text_teal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="-5dp"/>

            <TextView
                android:id="@+id/tvNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please seek a doctor for\ndetailed information"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/text_teal"/>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="30dp">

            <!-- Check Up -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center">

                <!-- 🔷 Teal Background Only Around ImageView -->
                <LinearLayout
                    android:id="@+id/layout_checkup"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_teal_card"
                    android:padding="16dp"
                    android:clipToOutline="true">

                    <ImageView
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:src="@drawable/ic_checkup"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <!-- 📝 TextView without teal background -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check Up"
                    android:textColor="#25BEBE"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>


            <!-- Report -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center">

                <!-- 🔷 Teal Background Only Around ImageView -->
                <LinearLayout
                    android:id="@+id/layout_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_teal_card"
                    android:padding="16dp"
                    android:clipToOutline="true">

                    <ImageView
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:src="@drawable/ic_plus"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <!-- 📝 TextView without teal background -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report"
                    android:textColor="#25BEBE"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
