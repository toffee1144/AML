<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#C6E7EA">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="16dp"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Identity Details"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />
        </RelativeLayout>

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="-60dp"
            android:background="@drawable/circle_yellow_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person_placeholder"
            android:contentDescription="Profile photo"
            android:elevation="4dp" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Section: Name, DOB, Gender -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_teal_bg"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:text="Full Name"
                    style="@style/DetailLabel" />

                <TextView
                    android:id="@+id/tvFullName"
                    style="@style/DetailValue" />

                <TextView
                    android:text="Date of Birth"
                    style="@style/DetailLabel"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvDOB"
                    style="@style/DetailValue" />

                <TextView
                    android:text="Gender"
                    style="@style/DetailLabel"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvGender"
                    style="@style/DetailValue" />
            </LinearLayout>

            <!-- Section: Photo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_teal_bg"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:text="Photo"
                    style="@style/DetailLabel"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvPhotoName"
                    style="@style/DetailValue"
                    android:text="-" />
            </LinearLayout>

            <!-- Section: Email & Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_teal_bg"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:text="Email"
                    style="@style/DetailLabel" />

                <TextView
                    android:id="@+id/tvEmail"
                    style="@style/DetailValue" />

                <TextView
                    android:text="Password"
                    style="@style/DetailLabel"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvPassword"
                        style="@style/DetailValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="********" />

                    <ImageView
                        android:id="@+id/btnShowPassword"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_eye"
                        app:tint="@android:color/white" />
                </LinearLayout>
            </LinearLayout>

            <!-- Button -->
            <Button
                android:id="@+id/btnEditIdentity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Personal Identity"
                android:backgroundTint="@color/teal"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat_bold"
                android:elevation="2dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
