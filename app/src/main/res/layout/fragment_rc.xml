<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage.report.RcFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkup Details"
            android:fontFamily="@font/montserrat_extrabold"
            android:textColor="@color/teal"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"/>

        <!-- Two Cards: Check Up & Report -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginHorizontal="30dp">

            <!-- Check Up Card -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="24dp">

                <LinearLayout
                    android:id="@+id/layout_report"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:background="@drawable/shape_teal_card"
                    android:clipToOutline="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvSymptom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:fontFamily="@font/montserrat_black"
                        android:textSize="48sp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sinusitis Risk\nLevel"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Report Card -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/layout_checkup"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:background="@drawable/shape_teal_card"
                    android:clipToOutline="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvRiskLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4/8"
                        android:fontFamily="@font/montserrat_black"
                        android:textSize="48sp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Symptom\nMatch"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Report Section -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvReportContent"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/shape_hollow"
            android:gravity="top|start"
            android:padding="12dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recommended Action"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvReportContent3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/shape_hollow"
            android:gravity="top|start"
            android:padding="12dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>
        <Button
            android:id="@+id/btnOpenMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Nearby Hospitals" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DISCLAIMER"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="-6dp"/>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All the actions above are for informational purposes only and may contain inaccuracies. Please consult a medical professional for an accurate diagnosis and proper treatment."
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

    </LinearLayout>
</ScrollView>