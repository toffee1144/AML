<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FA"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/ic_back_arrow"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Back" />

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Personal Identity"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#009DAE" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update your full name, birth date, email, and password"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/note"
                    android:contentDescription="Edit Icon" />
            </LinearLayout>

            <!-- Card Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:elevation="2dp">

                <EditText
                    android:id="@+id/etFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_background"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etDateOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date of Birth (YYYY-MM-DD)"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_background"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/rgSex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <RadioButton
                        android:id="@+id/rbMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:checked="true"
                        android:textSize="14sp"
                        android:layout_marginEnd="16dp"
                        android:buttonTint="@color/teal"/>

                    <RadioButton
                        android:id="@+id/rbFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textSize="14sp"
                        android:buttonTint="@color/teal"/>
                </RadioGroup>

                <EditText
                    android:id="@+id/etPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Photo URL (Auto-filled)"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_background"
                    android:textSize="14sp"
                    android:enabled="false" />

                <!-- Pick photo button -->
                <ImageView
                    android:id="@+id/btnPickPhoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_upload"
                    android:contentDescription="Pick Photo"
                    android:background="?android:selectableItemBackgroundBorderless" />

                <!-- Preview photo -->
                <ImageView
                    android:id="@+id/imgProfilePreview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person_placeholder"
                    android:background="@drawable/preview_border"
                    android:contentDescription="Profile Photo Preview" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_background"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password (Kosongkan bila tidak ingin mengubah password)"
                    android:inputType="textPassword"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_background"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password (Kosongkan bila tidak ingin mengubah password)"
                    android:inputType="textPassword"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_background"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Update Identity Button -->
            <Button
                android:id="@+id/btnUpdateIdentity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Identity"
                android:layout_marginTop="24dp"
                android:backgroundTint="#009DAE"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:buttonTint="@color/teal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Success Popup Overlay -->
    <LinearLayout
        android:id="@+id/successOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_success_popup"
            android:padding="24dp"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_check_circle"
                app:tint="@android:color/white"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Identity Successfully Updated"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tvRedirectCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redirect in 3s"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
